/* components/superList/superList.wxss */
.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #ffffff;
    border-radius: 8rpx;
    overflow: hidden;
}

.main {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 22rpx;
}

.picture {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.content {
    font-size: 18px;
    font-weight: bold;
    padding-left: 26rpx;
}

.btns {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #eeeeee;
    padding: 12rpx 22rpx;
    padding-bottom: 18rpx;
}

.btn {
    flex: 1;
    text-align: left;
}

.btn image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}

.btn text {
    font-size: 22rpx;
    padding-left: 8rpx;
}

.blue {
    color: #0f80dd;
}