/* components/history/history.wxss */
.container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    background-color: #ffffff;
    border-radius: 8rpx;
    padding: 22rpx;
}

.picture {
    width: 80rpx;
    height: 80rpx;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 36rpx;
}

.title {
    font-weight:bold;
    width: 550rpx;
    word-wrap: break-word;
}

.tip {
    padding-top: 10rpx;
    font-size:12px;
}