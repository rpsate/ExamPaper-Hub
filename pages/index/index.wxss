/* pages/index/index.wxss */
page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    padding-bottom: 58px;
}

.banner {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 750rpx;
}

.banner image {
    margin-top: 20rpx;
    width: 710rpx;
    height: 237rpx;
    border-radius: 8rpx;
    -moz-box-shadow: 2px 2px 3px rgba(180,183,218,0.2); 
    box-shadow: 2px 2px 3px rgba(180,183,218,0.2);
}

.main {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}

subject-cmp {
    width: 340rpx;
    margin-top: 20rpx;
    margin-left: 24rpx;
    -moz-box-shadow: 2px 2px 3px rgba(180,183,218,0.2); 
    box-shadow: 2px 2px 3px rgba(180,183,218,0.2);
}

ad-cmp {
    position: fixed;
}
